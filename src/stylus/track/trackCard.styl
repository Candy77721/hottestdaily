.track-card
  width 100%
  height 480px
  display flex
  flex-direction columns
  .inner
    width 684px
    .title
      width 684px
      padding-bottom 40px
      margin 0 0 45px 0
      color #515151
      font-family "Microsoft JhengHei"
      font-size 48px
      font-weight bold
      border-bottom 5px solid #515151
    .time-axis
      display flex
      justify-content space-around
      .time-card
        width 210px
        height 270px
        position relative
        background-color #F9F9F9
        border-radius 8px
        box-shadow 0 4px 4px rgba(0, 0, 0, 0.25)
        &:nth-child(-n+2)
          margin-right 22px
        .time
          position absolute
          top -72px
          left 55px
          color #48D7DE
        .keywords
          display flex
          justify-content space-between
          .keyword
            display inline-block
            padding 5px 5px
            margin 15px 4px
            font-size 14px
            color #fff
            background-color #739DF0
            border-radius 3px
        .card-bar
          position absolute
          top -65px
          left 40px
          width 4px
          height 65px
          border-radius 3px
          background-color #48D7DE
        .card-text
          font-size 14px
          padding 0 12px
          color #515151
          letter-spacing 2px
          text-indent 32px
  .graph
    width 500px
    height 400px
    margin-left 15px
    margin-top 38px
